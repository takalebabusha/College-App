<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rotationX="360"
    android:background="#000277BD"
    android:rotationY="360">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_height="211dp"
        android:src="@drawable/srl">

    </ImageView>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:background="#FAF9F8"
        android:text="       Welcome to Shree  Ramchandra College of Engineering Admin Portal  "
        android:textColor="#FF0000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView


        android:layout_width="wrap_content"
        android:layout_height="291dp"
        android:src="@drawable/src4">

    </ImageView>

    <Button

        android:id="@+id/loginbtn"
        android:layout_width="214dp"
        android:layout_height="66dp"
        android:backgroundTint="#F43737"
        android:foregroundTint="@color/black"
        android:text="Go To Admin Login"
        android:textColor="#EFF1F0"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"/>
</LinearLayout>